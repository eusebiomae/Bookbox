mixin team-classic( obj )
	article.team-classic&attributes( attributes )
		a.team-classic-figure( href='#' ): +img( obj.img )
		h4.team-classic-name: a( href='#' )=obj.name
		p.team-classic-text= obj.text ? obj.text : 'Stimulates vast a real proven works discount secure care. Market invigorate'
		+widget-list( [], '', 'team-classic-list-social list-social-2 list-inline-sm' )

