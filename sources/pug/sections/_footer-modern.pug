mixin footer-modern( obj )
	footer.section.footer-modern&attributes( attributes )
		.footer-modern-body.section-xl( class= obj.bodyMod )
			.container
				.row.row-40.row-md-50.justify-content-xl-between
					.col-md-10.col-lg-3.col-xl-4.wow.fadeInRight: .inset-xl-right-70.block-1
						h5.footer-modern-title Gallery
						.row.row-10.gutters-10( data-lightgallery='group' )
							each itemGallery in obj.gallery
								.col-4.col-sm-2.col-lg-4
									// Thumbnail Minimal
									a.thumbnail-minimal( href='images/' + itemGallery.imgOriginal + '.jpg', data-lightgallery='item' ): +img( itemGallery.img )

					.col-sm-6.col-md-7.col-lg-5.wow.fadeInRight( data-wow-delay='.1s' )
						h5.footer-modern-title Quick Links
						ul.footer-modern-list.footer-modern-list-2.d-sm-inline-block.d-md-block
							each itemList in obj.list
								li: a( href= itemList.link )= itemList.text

					.col-sm-6.col-md-5.col-lg-4.col-xl-3.wow.fadeInRight( data-wow-delay='.2s' )
						h5.footer-modern-title Get in touch
						ul.contacts-creative
							li: .unit.unit-spacing-sm.flex-column.flex-md-row
								.unit-left: span.icon.mdi.mdi-map-marker
								.unit-body
									a( href='#' ) 523 Sylvan Ave, 5th Floor
										br
										| Mountain View, CA 94041 USA

							li: .unit.unit-spacing-sm.flex-column.flex-md-row
								.unit-left: span.icon.mdi.mdi-phone
								.unit-body
									a( href='tel:#' ) +1 (844) 123 456 78

							li: .unit.unit-spacing-sm.flex-column.flex-md-row
								.unit-left: span.icon.mdi.mdi-email-outline
								.unit-body
									a( href='mailto:#' ) info@demolink.org

						+widget-list([
							{ href: '#', icon: 'icon mdi mdi-facebook' },
							{ href: '#', icon: 'icon mdi mdi-twitter' },
							{ href: '#', icon: 'icon mdi mdi-instagram' },
							{ href: '#', icon: 'icon mdi mdi-google-plus' },
							{ href: '#', icon: 'icon mdi mdi-skype' }
						], '', 'list-social-3 list-inline-sm' )

		.footer-modern-panel.text-center: .container: +rights