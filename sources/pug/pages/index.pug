extends  ../_skeleton

//- Includes
include ../sections/_header-creative
include ../components/_box-icon
include ../svg-icons/_svg-icons
include ../components/_product
include ../components/_counters
include ../components/_card
include ../components/_thumbnail
include ../components/_inline-subscribe-form
include ../components/_team
include ../components/_posts
include ../sections/_footer-modern

block variables
	-
		var
			pageName = 'Home';

block page
	// Page Header
	+header-creative({
		mod: 'header-creative-wrap context-dark'
	}).rd-navbar-creative-2

	// Swiper
	section.section.swiper-container.swiper-slider.swiper-slider-4( data-loop='true' )
		.swiper-wrapper.context-dark
			.swiper-slide.swiper-slide-1( data-slide-bg='images/slide-1.jpg' )
				.swiper-slide-caption.section-md.text-sm-left: .container: .row: .col-sm-8.col-md-7
					h2.swiper-title-1( data-caption-animate='fadeInLeft', data-caption-delay='100' ) Tasty Way
						=' '
						br
						| to Healthier Life
					h5.swiper-title-2.text-width-medium( data-caption-animate='fadeInLeft', data-caption-delay='250' ) Our organic drinks contain all necessary elements and vitamins for your health.
					.button-wrap( data-caption-animate='fadeInLeft', data-caption-delay='400' )
						a.button.button-lg.button-shadow-4.button-secondary-2.button-zakaria( href= links.shop ) Shop now

			.swiper-slide.swiper-slide-2( data-slide-bg='images/slide-2.jpg' )
				.swiper-slide-caption.section-md.text-center: .container
					h2.swiper-title-1( data-caption-animate='fadeInLeft', data-caption-delay='100' ) New Drink, New Day
					h5.swiper-title-2( data-caption-animate='fadeInRight', data-caption-delay='250' ) With our wide variety of smoothies and healthy drinks, we are sure
						=' '
						br.d-none.d-md-block
						| to help you make the right choice to start your day.
					.button-wrap( data-caption-animate='fadeInUp', data-caption-delay='400' )
						a.button.button-lg.button-shadow-4.button-secondary-2.button-zakaria( href= links.shop ) Shop now

		// Swiper Pagination
		.swiper-pagination

		// Swiper Navigation
		.swiper-button-prev
		.swiper-button-next


	// Services
	section.section.section-xxl.bg-image-1
		.container: .row.row-xl.row-30.row-md-40.row-lg-50.align-items-center
			.col-md-5.col-xl-4: .row.row-30.row-md-40.row-lg-50.bordered-2
				.col-sm-6.col-md-12
					+box-icon-classic({
						unit: 'flex-column flex-lg-row-reverse',
						title: '100% organic',
						text: 'We make our products from 100% organic and fresh ingredients full of vitamins and nutrients.'
					}).box-icon-nancy-right.text-center.text-lg-right.wow.fadeInLeft
						+svg-icon-8
				.col-sm-6.col-md-12
					+box-icon-classic({
						unit: 'flex-column flex-lg-row-reverse',
						title: 'Good for health',
						text: 'Our drinks are exceptionally good for boosting your health and increasing your energy level.'
					}).box-icon-nancy-right.text-center.text-lg-right.wow.fadeInLeft( data-wow-delay='.1s' )
						+svg-icon-9
			.col-md-2.col-xl-4.d-none.d-md-block.wow.fadeScale: +img( 'index-1-399x407.png' )
			.col-md-5.col-xl-4: .row.row-30.row-md-40.row-lg-50.bordered-2
				.col-sm-6.col-md-12
					+box-icon-classic({
						unit: 'flex-column flex-lg-row',
						title: 'No additives',
						text: 'Our smoothies, healthy drinks, and energy bowls contain no artificial additives, only vital elements.'
					}).box-icon-nancy-left.text-center.text-lg-left.wow.fadeInRigth
						+svg-icon-6
				.col-sm-6.col-md-12
					+box-icon-classic({
						unit: 'flex-column flex-lg-row',
						title: 'A lot of energy',
						text: 'We designed our products as the universal organic energetics that can quench your thirst.'
					}).box-icon-nancy-left.text-center.text-lg-left.wow.fadeInRight( data-wow-delay='.1s' )
						+svg-icon-7


	// New Flavors
	section.section.section-xxl.bg-default
		.container
			h2.text-transform-capitalize.wow.fadeScale New Flavors
			.row.row-lg.row-30.row-lg-50
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-1-95x175.png',
						title: 'Mango',
						price: '23.00',
						priceOld: '30.00'
					}).wow.fadeInRight
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-2-95x175.png',
						title: 'Strawberry',
						price: '13.00',
						new: true
					}).wow.fadeInRight( data-wow-delay='.1s' )
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-3-95x175.png',
						title: 'Apple',
						price: '16.99'
					}).wow.fadeInRight( data-wow-delay='.2s' )
				
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-4-95x175.png',
						title: 'Guava',
						price: '12.00',
						new: true
					}).wow.fadeInLeft( data-wow-delay='.3s' )
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-5-95x175.png',
						title: 'Grapes',
						price: '11.00',
						new: true
					}).wow.fadeInLeft( data-wow-delay='.2s' )
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-6-95x175.png',
						title: 'Bananas',
						price: '15.99'
					}).wow.fadeInLeft( data-wow-delay='.1s' )
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-7-95x175.png',
						title: 'Carrots',
						price: '24.00',
						priceOld: '33.00'
					}).wow.fadeInRight( data-wow-delay='.3s' )
				
				
				.col-sm-6.col-md-4.col-lg-3
					+product({
						img: 'product-8-95x175.png',
						title: 'Orange',
						price: '14.99'
					}).wow.fadeInLeft


	// Counter Modern
	+parallax({
		img: 'parallax-2',
		innerClass: 'section-xxl context-dark'
	})
