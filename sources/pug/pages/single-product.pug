						#carousel-parent.slick-slider.carousel-parent( data-items='1', data-swipe='true', data-child='#child-carousel', data-for='#child-carousel' )
							.item: .slick-product-figure: +img( 'single-product-1-530x480.png' )
							.item: .slick-product-figure: +img( 'single-product-2-530x480' )

						#child-carousel.slick-slider.child-carousel.slick-nav-1( data-arrows='true', data-items='3', data-sm-items='3', data-md-items='3', data-lg-items='3', data-xl-items='3', data-xxl-items='3', data-md-vertical='true', data-for='#carousel-parent' )
							.item: .slick-product-figure: +img( 'single-product-1-530x480.png' )
							.item: .slick-product-figure: +img( 'single-product-2-530x480' )

				.col-lg-6
					.single-product
						h3.text-transform-none.font-weight-medium Forest Berry
						.group-md.group-middle
							.single-product-price $18
							.single-product-rating
